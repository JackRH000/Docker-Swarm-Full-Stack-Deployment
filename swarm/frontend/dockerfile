FROM node:latest

WORKDIR /app

COPY package*.json ./

RUN npm init --yes  \
    && npm install

ARG REACT_APP_SOLUTIONS_HOST_IP
ARG REACT_APP_LOGIN_HOST_IP

ENV REACT_APP_SOLUTIONS_HOST_IP $REACT_APP_SOLUTIONS_HOST_IP
ENV REACT_APP_LOGIN_HOST_IP $REACT_APP_LOGIN_HOST_IP
COPY . .

EXPOSE 3001

CMD npm start
